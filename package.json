{
  "name": "growserver",
  "version": "3.0.0",
  "description": "a growtopia private server",
  "main": "dist/src/app.js",
  "scripts": {
    "test": "nr build && (node dist/src/app.js || bun run dist/src/app.js)",
    "dev": "tsx ./src/app.ts",
    "generate": "drizzle-kit push --config=drizzle.config.ts",
    "seed": "node scripts/seeds.js || bun run scripts/seeds.js",
    "studio": "drizzle-kit studio",
    "build": "rimraf dist && tsc",
    "setup": "node scripts/setup.js || bun run scripts/setup.js",
    "iteminfo": "node scripts/item-info/build.js || bun run scripts/item-info/build.js",
    "install": "nr setup && nr build && nr generate && nr seed && nr iteminfo"
  },
  "keywords": [],
  "author": "JadlionHD <jadlion.dev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@antfu/ni": "^0.23.0",
    "@hono/node-server": "^1.13.1",
    "@libsql/client": "^0.14.0",
    "bcryptjs": "^2.4.3",
    "consola": "^3.2.3",
    "decompress": "^4.2.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "drizzle-zod": "^0.5.1",
    "fast-xml-parser": "^4.5.0",
    "growtopia.js": "^2.0.6",
    "hono": "^4.6.3",
    "jsonwebtoken": "^9.0.2",
    "mwparser": "^1.3.3",
    "nanoid": "^3.3.7",
    "undici": "^6.19.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "^1.1.14",
    "@types/decompress": "^4.2.7",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.5.5",
    "drizzle-kit": "^0.22.8",
    "rimraf": "5.0.10",
    "tsx": "^4.19.2",
    "type-fest": "^4.26.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=7.0.0"
  }
}
