    "@growserver/types": "workspace:*",
    "@growserver/utils": "workspace:*",
    "@hono/node-server": "^1.19.6",
    "bcryptjs": "^3.0.2",
    "cross-env": "^10.0.0",
    "hono": "^4.10.4",
    "jsonwebtoken": "^9.0.2",
    "rimraf": "^6.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@types/jsonwebtoken": "^9.0.10",
